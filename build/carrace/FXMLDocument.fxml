<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane id="AnchorPane" fx:id="scene" focusTraversable="true" prefHeight="646.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="carrace.FXMLDocumentController">
   <children>
      <ImageView fx:id="track" fitHeight="654.0" fitWidth="738.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/track.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="user" fitHeight="134.0" fitWidth="82.0" layoutX="367.0" layoutY="481.0" onKeyPressed="#onKeyPressed" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/user.png" />
         </image>
      </ImageView>
      <Rectangle fx:id="bgGameOver" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="654.0" stroke="BLACK" strokeType="INSIDE" visible="false" width="654.0" />
      <Label fx:id="gameOverLabel" layoutX="200.0" layoutY="250.0" style="-fx-font-size: 48px; -fx-text-fill: red;" text="Game Over" visible="false" />
      <Label fx:id="scoreLabel" layoutX="10.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-text-fill: white;" text="Score: 0" />
      <Label fx:id="finalScoreLabel" layoutX="200.0" layoutY="320.0" style="-fx-font-size: 24px; -fx-text-fill: yellow;" text="Your Score: 0" visible="false" />
      <Button fx:id="exitButton" layoutX="327.0" layoutY="400.0" onAction="#exitGame" prefHeight="12.0" prefWidth="156.0" style="-fx-background-radius: 20; -fx-font-size: 18px;" text="Exit" visible="false" />
      <Button fx:id="restartButton" layoutX="146.0" layoutY="399.0" onAction="#restartGame" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 18px; -fx-background-radius: 20;" text="Restart" visible="false" />
   </children>
</AnchorPane>
